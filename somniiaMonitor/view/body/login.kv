#: kivy 2.3.0


<Login@Screen>:
    email_text: email_text
    password_text: password_text
    login: login
    signin: signin
    back: back
    BoxLayout:
        orientation: 'vertical'
        padding: 50, 5
        Label:
            text: 'Login'
            font_size: 48
            text_size: self.size
            halign: 'left'
            valign: 'center'
            size_hint_y: None
            height: 60
        GridLayout:
            cols: 1
            spacing: 10
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Email'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: email_text
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Password'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: password_text
                    write_tab: False
                    multiline: False
            CtaButton:
                id: login
                text: 'Login'
            Button:
                id: back
                text: 'Back'
                on_release: app.root.ids['sm'].current = 'homepage_screen'

            Label:
                text: 'Not Signed?'
            CtaButton
                id: signin
                text: 'Signin'
                on_release: app.root.ids['sm'].current = 'doctor_registration'
