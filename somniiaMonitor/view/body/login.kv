#: kivy 2.3.0


<Login@Screen>:
    emailtext: emailtext
    passwordtext: passwordtext
    login: login
    signin: signin
    back: back
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 1
            padding: 100, 10
            spacing: 10
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'email'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: emailtext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'password'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: passwordtext
                    write_tab: False
                    multiline: False
            CtaButton:
                id: login
                text: 'login'
            Button:
                id: back
                text: 'annulla'
                on_release: app.root.ids['sm'].current = 'homepage_screen'
            Label:
                text: 'Not Signed?'
            CtaButton
                id: signin
                text: 'signin'
                on_release: app.root.ids['sm'].current = 'doctor_registration'
