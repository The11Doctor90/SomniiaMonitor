#: kivy 2.3.0


<DoctorRegistration@Screen>:
    nametext: nametext
    surnametext: surnametext
    taxtext: taxtext
    codetext: codetext
    birthtext: birthtext
    gendertext: gendertext
    emailtext: emailtext
    passwordtext: passwordtext
    phonetext: phonetext
    addresstext: addresstext
    numbertext: numbertext
    citytext: citytext
    provtext: provtext
    zipcodetext: zipcodetext
    countrytext: countrytext
    save: save
    back: back
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            padding: 10
            spacing: 10
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'name'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: nametext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'surname'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: surnametext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'tax id'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: taxtext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Registration code'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: codetext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Birth Date'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: birthtext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'gender'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: gendertext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'email'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: emailtext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'password'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: passwordtext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'phone'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: phonetext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'address'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: addresstext
                    write_tab: False
                    multiline: False

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'number'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: numbertext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'city'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: citytext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'province'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: provtext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'zip code'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: zipcodetext
                    write_tab: False
                    multiline: False
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'country'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    id: countrytext
                    write_tab: False
                    multiline: False
        BoxLayout:
            size_hint_y: None
            height: 50
            CtaButton:
                id:save
                text: 'save'
                on_release: root.save_doctor()
