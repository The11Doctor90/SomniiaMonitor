#: kivy 2.3.0

<HomepageScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
#        padding: 50, 5

        Button:
            text: 'Analisi'
            size_hint: (None, None)
            width: 250
            height: 50
            on_release:
                from somniiaMonitor.business.integrityChecks.maskIntegrityCheck import MaskIntegrityCheck
                from kivy.uix.popup import Popup
                from kivy.uix.label import Label
                if MaskIntegrityCheck.masks_are_present(): app.root.ids['sm'].current = 'analysis_screen'
                else: Popup(title='Warning', content=Label(text='No bluetooth adapters found'), size_hint=(None, None), size=(300, 200)).open()


        Button:
            text: 'Device'
            size_hint: (None, None)
            width:250
            height:50
            on_release: app.root.ids['sm'].current = 'devices_screen'
