#: kivy 2.3.0

#:include somniiaMonitor/view/includeAll.kv

#:import tr somniiaMonitor.view.somniia_ui.tr

#root = BoxLayout
BoxLayout:
    GridLayout:
        cols: 1
        size_hint_x: None
        width: 50
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            cols: 1
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
        GridLayout:
            cols: 1
            size_hint_y: None
            height: 100
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                text: 'Account'
                font_size: 9
                on_release: app.root.ids['sm'].current = 'login'
            Button:
                text: 'Setting'
                font_size: 9

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .2, .2, .2,
            Rectangle:
                source: 'resources/images/Figure 4.png'
                size: root.width, root.height
                pos: self.pos
        ScreenManager:
            id: sm
            HomepageScreen:
                name: 'homepage_screen'
            DevicesScreen:
                name:'devices_screen'
            AnalysisScreen:
                name:'analysis_screen'
            DoctorRegistration:
                name: 'doctor_registration'
            Login:
                name: 'login'
            SleepersScreen:
                name: 'sleepers_screen'
            SleeperRegistration:
                name: 'sleeper_registration'




